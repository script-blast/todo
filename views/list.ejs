<%- include("header") -%>
    <div class="box" id="heading">
        <h1>Today</h1>
    </div>
    <div class="box">
        <% for(var i=0;i<todolist.length;i++){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="checkbox" value="<%=todolist[i].id %>" onchange="this.form.submit()">
                <p class="todoitem"> <%=todolist[i].todo%> </p>
            </div>
        </form>

        <% } %>
        <form action="/" method="post" class="item">
            <input type="text" name="todo" placeholder="New Item">
            <button class="newitem" type="submit" name="button">+</button>
        </form>
    </div>
<%- include("footer") -%>
